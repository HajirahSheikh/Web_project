<style>
    .custom-btn {
        padding: 10px 20px;
        background-color: #B85042;
        /* Background color */
        color: #E7E8D1;
        /* Text color */
        text-decoration: none;
        border-radius: 50px;
        margin-bottom: 20px;
        font-size: 20px;
        transition: background-color 0.3s;
    }

        .custom-btn:hover {
            background-color: #D36E5D;
            /* Hover background color */
        }

    .home-link,
    .contact-link {
        color: #6D5843;
        /* Dark wooden brown color */
    }

    .card-img-top {
        width: 100%;
        /* Ensures the image fills the card width */
        height: 200px;
        /* Sets a consistent height for all images */
        object-fit: cover;
        /* Ensures the image covers the space without distorting */
    }

    .card-body {
        text-align: center;
        /* Centers the text in each card */
    }
</style>

<body>

    <!--the image carouse-->
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
