                                    <a asp-area="" asp-controller="Library" asp-action="Categories" class="btn custom-btn">View Books</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Add more carousel items with additional categories and images as needed -->
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card h-100">
                                <img src="~/images/philosophy.jpeg" class="card-img-top" alt="Philosophy">
                                <div class="card-body">
