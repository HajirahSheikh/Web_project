                                    <a asp-area="" asp-controller="Library" asp-action="Categories" class="btn custom-btn">View Books</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <img src="~/images/history.jpeg" class="card-img-top" alt="History">
                                <div class="card-body">
