@{
    ViewBag.Title = "Add Book Review";
    Layout = null;
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        h1 {
            color: #343a40;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
        }

        .custom-btn {
            background-color: #B85042;
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            transition: background-color 0.3s;
            width: 40%;
        }

            .custom-btn:hover {
                background-color: #BF7860;
            }
    </style>
</head>
<body>
    <div class="header bg-dark text-white" style="width: 300%; padding: 15px;">
        <span style="font-size: 20px;">PollenPage</span>
    </div>
    <div class="container mt-5">
        <h1>Add Review</h1>
        <form method="post" action="/ReviewsPage/AddReviewData">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="Title" placeholder="Enter book title" required>
            </div>

            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" id="author" name="Author" placeholder="Enter author name" required>
            </div>

            <div class="form-group">
                <label for="userId">User ID</label>
                <input type="text" class="form-control" id="userId" name="UserId" placeholder="Enter user ID" required>
            </div>

            <div class="form-group">
                <label for="rating">Rating</label>
                <input type="number" class="form-control" id="rating" name="Rating" placeholder="Enter rating (1-5)" required>
            </div>

            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea class="form-control" id="comment" name="Comment" rows="3" placeholder="Enter comment" required></textarea>
            </div>

            <div class="form-group">
                <label for="datePosted">Date Posted</label>
                <input type="datetime-local" class="form-control" id="datePosted" name="DatePosted" required>
            </div>

            <div class="text-center">
                <button type="submit" class="btn custom-btn">ADD</button>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
