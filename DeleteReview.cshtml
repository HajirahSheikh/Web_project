@{
        Layout = null;
    }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
        background-color: #f8f9fa;
        }

        .container {
        background-color: #fff;
            border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    padding: 30px;
    }

    h1 {
    color: #343a40;
            text-align: center;
        margin-bottom: 30px;
    }

        .form-group label {
        font-weight: bold;
    }

        .custom-btn {
        background-color: #B85042;
            color: #fff;
            border: none;
        border-radius: 25px;
    padding: 10px 20px;
    transition: background-color 0.3s;
    width: 40%;
    }

            .custom-btn:hover {
        background-color: #BF7860;
            }
    </style>
</head>
<body>
    <div class="header bg-dark text-white" style="width: 300%; padding: 15px;">
        <span style="font-size: 20px;">PollenPage</span>
    </div>
    

    <div class="container mt-5">
        <h1>Delete Review</h1>
        <form method="post" action="/ReviewsPage/DeleteReviewData">
            <div class="form-group">
                <label for="reviewId">Review ID</label>
                <input type="number" class="form-control" id="reviewId" name="reviewId" placeholder="Enter review ID" required>
            </div>

            <div class="text-center">
                <button type="submit" class="btn custom-btn">Delete</button>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

